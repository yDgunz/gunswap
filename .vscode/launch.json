{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}/public",
            "sourceMaps": true,
            "userDataDir": "${workspaceRoot}/.vscode/chrome"
        }
    ]
}